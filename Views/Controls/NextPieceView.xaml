<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TetrisGame.Views.Controls.NextPieceView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <Label 
            Text="Next Piece" 
            Style="{StaticResource SmallLabel}"
            HorizontalOptions="Center" />
        <Border
            BackgroundColor="Black"
            Stroke="Gray"
            StrokeThickness="1"
            Padding="5">
            <Canvas
                x:Name="NextPieceCanvas"
                BackgroundColor="Black"
                HeightRequest="80"
                WidthRequest="80"
                HorizontalOptions="Center" />
        </Border>
    </StackLayout>

</ContentView>